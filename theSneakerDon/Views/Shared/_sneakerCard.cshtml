@model Sneaker

<div class="row-hero">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" alt="image for sneaker shop" />
        <div class="caption">
            <h3>@Model.Price</h3>
            <h3><a asp-controller="Sneaker" asp-action="Details" asp-route-id="@Model.SneakerId">@Model.Name</a></h3>
            <p>@Model.Description</p>
        </div>
    </div>
</div>
