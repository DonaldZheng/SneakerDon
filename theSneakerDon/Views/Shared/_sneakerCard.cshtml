@model Sneaker

<div class="row-hero">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" alt="image for sneaker shop" />
        <div class="caption">
            <h3><a asp-controller="Sneaker" asp-action="Details" asp-route-id="@Model.SneakerId">@Model.Name</a></h3>
            <h3>@Model.Price</h3>
        </div>
        <div class="addToCart" >
            <p class="button"><a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-sneakerId="@Model.SneakerId">Add to Cart</a></p>
        </div>
    </div>
</div>
