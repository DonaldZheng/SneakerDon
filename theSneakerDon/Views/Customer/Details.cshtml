<br />

<h2>Your Location</h2>
<style>
    #map {
        width: 900px;
        height: 900px;
        display: flex;
        flex: 150px;
        align-items: center;
    }
</style>
<br />
<div class="row">
    <br />
    <div id="map"></div>
    <script>
            var map;
            var marker;
        function initMap() {
            map = new google.maps.Map(document.getElementById('map'), {
                center: { lat:@Model.Latitude, lng:@Model.Longitude},
                zoom: 8,
                mapTypeId: "roadmap"
            });
            marker = new google.maps.Marker({
                position: { lat: @Model.Latitude, lng: @Model.Longitude },
                map: map
            });
        }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=@ViewBag.APIkeys&callback=initMap&libraries=&v=weekly" async></script>
</div>
