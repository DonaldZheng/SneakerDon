@model SneakerListViewModel




    <h1>@Model.CurrentCategory</h1>
    @foreach (var sneaker in Model.Sneakers)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <img src ="@sneaker.ImageThumbnailUrl" alt="image for sneaker shop" />
                <div class="caption">
                    <h3 class="pull-right">@sneaker.Price</h3>
                    <h3><a asp-controller="Sneaker" asp-action="Details" asp-route-id="@sneaker.SneakerId">@sneaker.Name</a></h3>
                    <p>@sneaker.Description</p>
                </div>
            </div>
        </div>

    }



